{% extends 'base.html.twig' %}

{% block title %} Learning Box Calendar {% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <!-- Article List -->
            <div class="col-sm-12">
                <!-- H1 Article -->
                <a class="main-article-link" href="#">
                    <div class="main-article mb-5 pb-3">
                        <img src="{{ asset('images/november.jpeg') }}" alt="meteor shower">
                        <h1 class="text-center mt-2">November</h1>
                    </div>
                </a>
                <!-- Supporting Calendar -->
                    {% for calendar in calendars %}
                        <div class="article-container my-1">
                        {% if calendar.publishedAt == true %}
                            <a href="{{ path('calendar_show', {slug: calendar.slug}) }}">
    {#                            <img class="article-img" src="{{ asset('images/asteroid.jpeg') }}">#}
                                <div class="col-md-3 article-title d-inline-block pl-3 align-middle">
                                    <span>{{ calendar.title }}</span>
                                    <br>
    {#                                <span class="pl-5 article-details float-right"> {{ calendar.publishedAt ? calendar.publishedAt }}</span>#}
                                </div>
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}

        </div>
    </div>
{% endblock %}
{% block content_class %}{{ parent() }} show-article-container-border-green{% endblock %}

{% block content_body %}

{% endblock %}
